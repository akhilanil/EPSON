<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.akhil.epson">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity

            android:name=".MainActivity"
            android:theme="@style/mainnotitle">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RemoteActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_remote"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:hardwareAccelerated="false"
            android:name=".LoadingActivity"
            android:label="@string/title_activity_loading"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".TestActivity"
            android:label="@string/title_activity_test"></activity>
        <activity
            android:name=".SettingsActivity"
            android:label="SettingsActivity"></activity>
        <service android:name=".NetworkDisconnect"
            android:stopWithTask="false"/>
        
    </application>

</manifest>